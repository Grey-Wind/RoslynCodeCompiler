<Window
    x:Class="RoslynCodeCompiler.Test.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RoslynCodeCompiler.Test.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TextBox
            x:Name="CodeBox"
            Width="286"
            Height="164"
            Margin="40,76,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalScrollBarVisibility="Auto"
            Text="using System;&#xA;&#xA;class Program&#xA;{&#xA;    static void Main()&#xA;    {&#xA;        Console.WriteLine(&quot;Hello, Compiled Code!&quot;);&#xA;    }&#xA;}"
            TextWrapping="Wrap"
            UndoLimit="500"
            VerticalScrollBarVisibility="Auto" />
        <Button
            x:Name="CompilerBtn"
            Width="209"
            Margin="40,258,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="CompilerBtn_Click"
            Content="Compiler" />
        <TextBox
            x:Name="OutputBox"
            Width="294"
            Height="164"
            Margin="370,76,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalScrollBarVisibility="Auto"
            RenderTransformOrigin="0.5,0.5"
            TextWrapping="Wrap"
            UndoLimit="500"
            VerticalScrollBarVisibility="Auto">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform AngleY="0.269" />
                    <RotateTransform />
                    <TranslateTransform Y="0.795" />
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox
            x:Name="OutputPathBox"
            Width="336"
            Margin="40,37,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            MaxLines="1"
            Text="./CompiledOutput"
            TextWrapping="Wrap" />

    </Grid>
</Window>
